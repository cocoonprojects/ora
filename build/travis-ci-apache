# build/travis-ci-apache - used for testing within Travis CI
<VirtualHost *:80>
  ServerName ora.local
  ServerAlias www.ora.local ora oraprojecttest
  DocumentRoot "%TRAVIS_BUILD_DIR%/src/public"
  PassEnv APPLICATION_ENV

  <Directory "%TRAVIS_BUILD_DIR%/src/public">
    Options FollowSymLinks MultiViews ExecCGI
    AllowOverride All
    Order deny,allow
    Allow from all
  </Directory>

  # Wire up Apache to use Travis CI's php-fpm.
  <IfModule mod_fastcgi.c>
    AddHandler php5-fcgi .php
    Action php5-fcgi /php5-fcgi
    Alias /php5-fcgi /usr/lib/cgi-bin/php5-fcgi
    FastCgiExternalServer /usr/lib/cgi-bin/php5-fcgi -host 127.0.0.1:9000 -pass-header Authorization
  </IfModule>

</VirtualHost>
